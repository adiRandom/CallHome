<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/colorAccent</item>
        <item name="colorOnSurface">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetStyle</item>

    </style>

    <style name="BottomSheetStyle" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomModalStyle</item>
        <item name="colorOnSurface">@color/colorPrimary</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="textInputStyle">@style/ContactTextInput</item>

    </style>

    <style name="BottomModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_modal_background</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.TextButton" />

    <style name="ContactTextInput" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeColor">@color/contact_input_color</item>
    </style>

    <style name="DropdownItemStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="android:minWidth">300dp</item>
    </style>

</resources>